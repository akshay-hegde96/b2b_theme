{
  "product-summary.shelf.product-comparison#complete": {
    "props": {
      "blockClass": "summaryComplete"
    },
    "children": [
      "flex-layout.row#stackSavings",
      "product-summary-brand",
      "product-summary-name",
      "flex-layout.row#productHighlight",
      //"product-summary-sku-name",
      //"product-rating-summary",
      "product-rating-inline",
      "check-permission#product-summary-price",
      "check-permission#product-summary-buy-button",
      "add-to-list-btn",
      "modal-trigger#quickview",
      //"check-permission#product-comparison-block",
      // "responsive-layout.desktop#productSummaryList",
      // "product-summary-space",
      "check-permission#product-comparison-block"
    ]
  },
  "responsive-layout.desktop#productSummaryList": {
    "children": ["flex-layout.row#summaryListDesktop"]
  },
  "flex-layout.row#summaryListDesktop": {
    "props": {
      "fullWidth": true,
      "colSizing": "auto",
      "blockClass": "summaryListDesktop"
    },
    "children": [
      "flex-layout.row#summaryLeftListDesktop"
      // "flex-layout.col#summaryRightListDesktop"
    ]
  },
  "flex-layout.row#summaryLeftListDesktop": {
    "props": {
      "blockClass": "summaryLeftListDesktop",
      "colSizing": "auto",
      "colGap": 7
    },
    "children": [
      "flex-layout.col#summaryDetailsListDesktop"
    ]
  },
  "flex-layout.col#summaryDetailsListDesktop": {
    "props": {
      "preventVerticalStretch": true,
      "blockClass":"priceAndViewDetailsCol"
    }
  },
  "product-selling-price#summary": {
    "props": {
      "blockClass": "summary"
    }
  },
  "product-list-price#summary": {
    "props": {
      "blockClass": "summary"
    }
  },
  "product-summary.shelf#complete": {
    "props": {
      "blockClass": "summaryComplete"
    },
    "children": [
      "flex-layout.row#stackSavings",
      "product-summary-brand",
      "product-summary-name",
      "product-location-availability",
      // "product-rating-summary",
      "product-rating-inline",
      "check-permission#product-summary-price",
      "check-permission#product-summary-buy-button",
      "add-to-list-btn",
      "modal-trigger#quickview"
    ]
  },

  "product-location-availability": {
    "props": {
      "maxItems": 3,
      "orderBy": "cheaper",
      "pickupFirst": false,
      "showDistance": "miles",
      "showAddressInfo": true
    }
  },

  "product-summary.shelf#searchBar": {

    "props": {
      "blockClass": "summarySearch",
      "skusFilter":"FIRST_AVAILABLE"


    },
    "children": [
      "product-summary-image#searchBar",
      "product-summary-brand",
      "product-summary-name"
      //"product-summary-sku-name"
    ]
  },
  "product-summary.shelf#searchBarMobile": {
    "props": {
      "blockClass": "summarySearch"
    },
    "children": [
      "product-summary-image#searchBarMobile",
      "product-summary-name"
    ]
  },
  "product-summary-image#searchBar": {
    "props": {
      "height": 140,
      "width": 140,
      "showBadge": false
    }
  },
  "product-summary-image#searchBarMobile": {
    "props": {
      "height": 48,
      "width": 48,
      "showBadge": false
    }
  },
  "flex-layout.row#stackSavings": {
    "children": ["stack-layout#summary"]
  },
  "stack-layout#summary": {
    "children": [
      "product-summary-image",
      "product-price-savings#summary",
      "product-price-savings#discount"

    ],
    "props": {
      "zIndexOffset": 3,
      "blockClass": ["savingsStack"]
    }
  },
  "product-price-savings#discount": {
    "props": {
      "message": "-{savingsPercentage}",
      "blockClass": "savingPercentage"
    }
  },
  "product-price-savings#summary": {
    "props": {
      "blockClass": "savingSummary"
    }
  },

  "check-permission#product-summary-buy-button": {
    "props": {
      "roles": [
        "store-admin",
        "sales-admin",
        "sales-manager",
        "sales-representative",
        "customer-admin",
        "customer-approver",
        "customer-buyer"
      ]
    },
    "blocks": ["allowed-content#product-summary-buy-button"]
  },

  "allowed-content#product-summary-buy-button": {
    "children": ["flex-layout.row#product-summary-buy-button"]
  },

  "flex-layout.row#product-summary-buy-button": {
    "children": ["add-to-cart-button#product-summary-buy-button"],
    "props": {
      "blockClass": ["product-summary-buy-button"]
    }
  },

  "add-to-cart-button#product-summary-buy-button": {
    "props": {
      "blockClass":"buy-button-plp",
      "text": "Buy",
      "addToCartFeedback": "customEvent",
      "customPixelEventId": "add-to-cart-button"
    }
  },

  "add-to-list-btn": {
    "props": {
      "text": "Add to Cart"
    }
  },
  "product-summary-brand": {
    "props": {
      "displayMode": "text"
    }
  },


  "product-summary.shelf#normal": {
    "props": {
      "blockClass": "summaryComplete"
    },
    "children": ["flex-layout.row#listview"]
  },
  "flex-layout.row#listview":{
    "children": ["flex-layout.col#img-view","flex-layout.col#summaryInfo"],
    "props":{
      "fullWidth":true
    }

  },

  "flex-layout.col#img-view":{
    "children":["flex-layout.row#stackSavings","add-to-list-btn",
      "modal-trigger#quickview"]
  },

  "flex-layout.col#summaryInfo": {
    "children": [
      "product-summary-brand",
      "product-summary-name",
      // "product-rating-summary",
      "product-rating-inline",
      "check-permission#product-summary-price",
      "check-permission#product-summary-buy-button"
    ],
    "props": {
      "preventVerticalStretch": true,
      "blockClass":"productNameCol"

    }
  },
  "product-summary.shelf#trending": {
    "children": ["flex-layout.row#summaryTrending"],
    "props": {
      "blockClass": "trendingSummary"
    }
  },
  "flex-layout.row#summaryTrending": {
    "children": [
      "product-summary-image#trending",
      "product-summary-column#summaryTrending"
    ],
    "props": {
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true
    }
  },
  "product-summary-column#summaryTrending": {
    "props": {
      "blockClass": "summaryCol"
    },
    "children": [
      "product-summary-name#trending",
      //"product-rating-summary",
      "product-rating-inline",
      "check-permission#product-summary-price",
      "product-availability"
    ]
  },
  "product-summary-name#trending": {
    "props": {
      "width": {
        "desktop": 96,
        "mobile": 96
      },
      "height": {
        "desktop": 96,
        "mobile": 96
      }
    }
  },
  "product-availability": {
    "props": {
      "threshold": "10",
      "lowStockMessage": "Only {quantity} left in stock",
      "highStockMessage": "Order now!"
    }
  },
  "product-summary-image#trending": {
    "props": {
      "width": 96,
      "height": 96,
      "showBadge": false
    }
  },
  "product-summary.shelf#minimum": {
    "children": [
      "product-summary-image",
      //"product-rating-summary",
      "product-rating-inline",
      "check-permission#product-summary-price",
      "check-permission#product-summary-buy-button"
    ],
    "props": {
      "blockClass": "minimumSummary"
    }
  },
  "product-summary-image": {
    "props": {
      "showBadge": false
    }
  },

  "check-permission#product-comparison-block": {
    "props": {
      "roles": [
        "store-admin",
        "sales-admin",
        "sales-manager",
        "sales-representative",
        "customer-admin",
        "customer-approver",
        "customer-buyer"
      ]
    },
    "blocks": ["allowed-content#product-comparison-block"]
  },

  "allowed-content#product-comparison-block": {
    "children": ["product-comparison-block.selector"]
  }
}
